<div class="search-bar relative">
  <div class="relative">
    <input type="search"
           placeholder="{{ placeholder | default: 'Search for an account...' }}"
           class="w-full bg-[#1A1C23]/80 backdrop-blur-sm border border-[#2A2D36] rounded-lg px-4 py-3 pl-12 text-white focus:outline-none focus:border-[#5865F2]"
           autocomplete="off"
           data-search-input>
           
    <svg class="absolute left-4 top-3.5 w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"/>
    </svg>
  </div>

  <div class="search-results absolute left-0 right-0 top-full mt-2 bg-[#1A1C23] border border-[#2A2D36] rounded-lg shadow-xl z-50 hidden"
       data-search-results>
    <div class="p-4 text-center text-gray-400 hidden" data-search-loading>
      <svg class="animate-spin h-5 w-5 mx-auto" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24">
        <circle class="opacity-25" cx="12" cy="12" r="10" stroke="currentColor" stroke-width="4"></circle>
        <path class="opacity-75" fill="currentColor" d="M4 12a8 8 0 018-8V0C5.373 0 0 5.373 0 12h4zm2 5.291A7.962 7.962 0 014 12H0c0 3.042 1.135 5.824 3 7.938l3-2.647z"></path>
      </svg>
      <p class="mt-2">Searching...</p>
    </div>
    <div class="divide-y divide-[#2A2D36]" data-search-results-container></div>
  </div>
</div>
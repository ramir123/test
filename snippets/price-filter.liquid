<div class="price-filter mb-8">
  <h3 class="text-lg font-bold mb-4">Filter by Price</h3>
  <div class="px-4">
    <div class="price-slider">
      <input type="range" 
             min="{{ settings.min_price }}" 
             max="{{ settings.max_price }}" 
             value="{{ settings.max_price }}" 
             class="w-full">
    </div>
    <div class="flex justify-between mt-2">
      <span class="text-sm">{{ settings.min_price | money }}</span>
      <span class="text-sm">{{ settings.max_price | money }}</span>
    </div>
  </div>
</div>

<style>
.price-slider input[type="range"] {
  -webkit-appearance: none;
  width: 100%;
  height: 4px;
  background: var(--color-background-secondary);
  border-radius: 2px;
  outline: none;
}

.price-slider input[type="range"]::-webkit-slider-thumb {
  -webkit-appearance: none;
  width: 20px;
  height: 20px;
  background: var(--color-primary);
  border-radius: 50%;
  cursor: pointer;
  transition: background 0.3s ease;
}

.price-slider input[type="range"]::-webkit-slider-thumb:hover {
  background: var(--color-primary-light);
}
</style>

<script>
document.querySelector('.price-slider input').addEventListener('input', (e) => {
  const maxPrice = parseInt(e.target.value);
  
  document.querySelectorAll('.account-card').forEach(card => {
    const price = parseInt(card.dataset.price);
    card.style.display = price <= maxPrice ? 'block' : 'none';
  });
});
</script>
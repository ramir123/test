<div class="featured-champions relative overflow-hidden">
  <div class="container mx-auto px-4 py-16">
    <h2 class="text-3xl md:text-4xl font-bold text-center mb-12 animate-slide-up">
      Featured Champions
    </h2>

    <div class="champion-grid grid grid-cols-2 md:grid-cols-4 lg:grid-cols-6 gap-4">
      {% for champion in product.metafields.custom.featured_champions %}
        <div class="champion-card relative group">
          <div class="aspect-square rounded-lg overflow-hidden bg-background-secondary">
            <img src="{{ champion.image | img_url: '300x300' }}"
                 alt="{{ champion.name }}"
                 class="w-full h-full object-cover transform group-hover:scale-110 transition-transform duration-300">
          </div>
          <div class="absolute inset-0 bg-gradient-to-t from-black/80 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300 flex items-end p-4">
            <div class="text-white">
              <p class="font-bold">{{ champion.name }}</p>
              <p class="text-sm text-gray-300">Mastery {{ champion.mastery_level }}</p>
            </div>
          </div>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
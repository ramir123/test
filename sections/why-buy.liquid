{% schema %}
{
  "name": "Why Buy Section",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title",
      "default": "ðŸ”¥ WHY BUY A LOL ACCOUNT?"
    }
  ],
  "blocks": [
    {
      "type": "reason",
      "name": "Reason",
      "settings": [
        {
          "type": "text",
          "id": "title",
          "label": "Title",
          "default": "Play without fear of losing"
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "When playing on a smurf account, you don't have to worry about losing MMR since it's not your main account."
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Why Buy Section",
      "blocks": [
        {
          "type": "reason"
        }
      ]
    }
  ]
}
{% endschema %}

<div class="py-16 bg-[#0B0E13]">
  <div class="container mx-auto px-4">
    <h2 class="text-4xl font-bold text-center mb-12">{{ section.settings.title }}</h2>
    
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
      {% for block in section.blocks %}
        <div class="bg-[#1A1C23] rounded-lg p-6 hover:transform hover:-translate-y-1 transition-all duration-300" 
             {{ block.shopify_attributes }}>
          <h3 class="text-xl font-bold mb-4">
            {{ forloop.index }}. {{ block.settings.title }}
          </h3>
          <p class="text-gray-400">
            {{ block.settings.description }}
          </p>
        </div>
      {% endfor %}
    </div>
  </div>
</div>
{
  "name": "Hero Section",
  "settings": [
    {
      "type": "text",
      "id": "search_placeholder",
      "label": "Search Placeholder",
      "default": "Search for an account..."
    }
  ],
  "blocks": [
    {
      "type": "popular_tag",
      "name": "Popular Tag",
      "settings": [
        {
          "type": "text",
          "id": "label",
          "label": "Tag Label",
          "default": "Europe West"
        },
        {
          "type": "url",
          "id": "url",
          "label": "Tag URL"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Hero Section",
      "blocks": [
        {
          "type": "popular_tag",
          "settings": {
            "label": "Europe West"
          }
